{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./out/main",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/**/*"
    ]
}